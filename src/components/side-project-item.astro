---
import { type SideProject } from "@/config";

type Props = SideProject;

const {
  name,
  summary,
  url: { source: sourceUrl, production: productionUrl },
  techStack,
} = Astro.props;

const Name = productionUrl ? "a" : "h4";
---

<div class="flex flex-col gap-1.5">
  <span class="inline-flex items-end font-serif text-xl">
    <Name
      href={productionUrl}
      target="_blank"
      rel="noopener noreferrer"
      class={`decoration-2 underline-offset-4 ${productionUrl ? "underline" : ""}`}
      >{name}</Name
    >
    {
      !!sourceUrl && (
        <a
          href={sourceUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="ml-2 text-base underline decoration-2 underline-offset-4"
        >
          (source)
        </a>
      )
    }
  </span>

  <p class="text-sm leading-relaxed text-muted-foreground">{summary}</p>

  <p class="mt-2 font-serif">
    stack: {techStack.join(", ")}
  </p>
</div>
